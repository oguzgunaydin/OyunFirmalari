<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgListeKapak"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageView_height"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oyunfirmabanner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvFirmalar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerView_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgListeKapak"
        tools:layout_editor_absoluteX="@dimen/layEditorX"
        tools:listitem="@layout/cardview_firma" />
</androidx.constraintlayout.widget.ConstraintLayout>

